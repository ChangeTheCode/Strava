@page "/activities"

@inherits AuthenticationBase

@using BlazorDateRangePicker

@if (UserActivities == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h3>Statistics</h3>
    // TODO: Berechnungen in Code auslagern
    <p>Overall distance: @UserActivities.Sum(activity => activity.Distance).ToString("0.00") km</p>

    <h3>Activities</h3>

    <div style="margin-bottom: 2em;">
        <label for="timeRange">Time range: </label>
        <DateRangePicker id="timeRange" @bind-StartDate="StartDate" @bind-EndDate="EndDate"
                         Culture="@(System.Globalization.CultureInfo.GetCultureInfo("de-DE"))"
                         OnRangeSelect="OnDateRangeSelect" />
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Type</th>
                <th>Distance</th>
                <th>Duration</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in UserActivities)
            {
                <tr>
                    <td>@activity.StartDate.ToString("dd/MM/yyyy")</td>
                    <td>@activity.Name</td>
                    <td>@activity.Type</td>
                    <td>@activity.Distance.ToString("0.00") km</td>
                    <td>@TimeSpan.FromMinutes(activity.MovingTime).ToString(@"hh\:mm\:ss")</td>
                </tr>

            }
        </tbody>
    </table>
}
